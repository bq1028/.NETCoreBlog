@model LoginViewModel

<form asp-route-returnurl="@ViewData["ReturnUrl"]" class="form" method="POST">
    <div class="bf-account-header">
        <h1>Welcome!</h1>
        <p>You can sign in or go <a href="~/">back to blog</a>.</p>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="UserName" class="form-control form-control form-control-top" placeholder="Username" autofocus>
    <input asp-for="Password" type="password" class="form-control form-control form-control-bottom" placeholder="Password">
    <div class="my-3">
       
            <input type="checkbox" asp-for="RememberMe">
            <span class="custom-control-label">Remember me</span>
        
    </div>
    <button type="submit" class="btn btn-lg btn-primary btn-block">Sign in</button>
    <div class="pt-2 text-center">or</div>
    <div class=" pt-2 text-info text-center">
        <a href="~/account/register">Sign up</a>
    </div>
  
</form>